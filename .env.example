# Database
DATABASE_URL=postgresql://healthcare:healthcare123@localhost:5432/healthcare_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# NPI Registry API
NPI_REGISTRY_BASE_URL=https://npiregistry.cms.hhs.gov/api/
NPI_RATE_LIMIT_SECONDS=1

# Geocoding (Nominatim - OpenStreetMap)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=healthcare-ai-system/1.0
NOMINATIM_RATE_LIMIT_SECONDS=1

# Model paths (local models)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0
FAISS_INDEX_PATH=./data/faiss_index

# Observability
LOG_LEVEL=INFO
METRICS_PORT=9090

# Environment
ENVIRONMENT=development
